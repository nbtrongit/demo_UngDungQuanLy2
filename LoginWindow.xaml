<Window x:Class="demo_UDQL2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo_UDQL2"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Icon="./Images/fuji.png">
    <Canvas>
        <Label Name="infoLabel" Width="400" Height="85" Background="Gray" Foreground="White" FontSize="50" Content="Hello World" FontFamily="Cambria" RenderTransformOrigin="0.5,0.5" Canvas.Left="10" Canvas.Top="10"/>
        <TextBlock Name="infoTextBlock" Text="lorem" Canvas.Left="10" Canvas.Top="118"/>
        <TextBox x:Name="usernameTextBox" Width="495" Height="35" Padding="5,5,0,0" Canvas.Left="10" Canvas.Top="166" Text="dfzgbxdfgbdfsgdgsdgs"/>
        <PasswordBox x:Name="passwordTextBox" Width="495" Height="35" Padding="5,5,0,0" Canvas.Left="10" Canvas.Top="238"/>
        <Button Click="submitButton_Click" Name="submitButton" Width="80" Height="35" Content="Login" Canvas.Left="210" Canvas.Top="315" />
        <Image x:Name="accountImage" Width="203" Height="188" Source="./Images/fuji.png" Canvas.Left="530" Canvas.Top="10" />

    </Canvas>
</Window>
